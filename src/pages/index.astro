---
import App from "../components/App/App";
import Layout from "../layouts/Layout.astro";
import fs from "fs";

const title = "Hack the Hill";

const en = fs.readFileSync("src/locales/en.json", "utf8");
const fr = fs.readFileSync("src/locales/fr.json", "utf8");
const i18n = {
	en: JSON.parse(en),
	fr: JSON.parse(fr),
};
---

<Layout title={title}>
	<App client:load i18n={i18n} />
</Layout>
